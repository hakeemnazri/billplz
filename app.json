{
  "name": "billplz-payment",
  "services": [
    {
      "name": "server",
      "environment_slug": "node-js",
      "github": {
        "branch": "main",
        "deploy_on_push": true,
        "repo": "your-username/billplz-payment"
      },
      "source_dir": "server",
      "run_command": "npm start",
      "build_command": "npm install",
      "http_port": 5000,
      "instance_count": 1,
      "instance_size_slug": "basic-xxs",
      "routes": [
        {
          "path": "/api",
          "preserve_path_prefix": true
        }
      ],
      "envs": [
        {
          "key": "MONGODB_URI",
          "value": "your-mongodb-uri",
          "type": "SECRET"
        },
        {
          "key": "CLIENT_ID",
          "value": "your-client-id",
          "type": "SECRET"
        },
        {
          "key": "CLIENT_SECRET",
          "value": "your-client-secret",
          "type": "SECRET"
        },
        {
          "key": "REDIRECT_URI",
          "value": "${APP_URL}/oauth/callback"
        },
        {
          "key": "BASE_URL",
          "value": "${APP_URL}"
        }
      ]
    },
    {
      "name": "client",
      "environment_slug": "node-js",
      "github": {
        "branch": "main",
        "deploy_on_push": true,
        "repo": "your-username/billplz-payment"
      },
      "source_dir": "client",
      "build_command": "npm install && npm run build",
      "run_command": "npm start",
      "http_port": 3000,
      "instance_count": 1,
      "instance_size_slug": "basic-xxs",
      "routes": [
        {
          "path": "/"
        }
      ],
      "envs": [
        {
          "key": "REACT_APP_API_URL",
          "value": "${APP_URL}"
        },
        {
          "key": "NODE_ENV",
          "value": "production"
        }
      ]
    }
  ]
} 